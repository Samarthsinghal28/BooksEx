<div class="container screen-rating" style="border: 1px solid black ; border-radius:10px;">
	<h3 style="margin:40px auto 10px auto ;font-size:48px;text-align:center">
		<strong>Leave a Rating</strong>
    </h3>
	<form action="/<%= commenting %>/<%= record._id %>/comments" method="POST">
		<div class="form-group row">
			 <section style="margin: 10px auto;">
   
				  <ul class="rate-area" style="padding-left: 0;">
					  <hr>
				  <input type="radio" id="5-star" name="rating" value="5"><label for="5-star" title="Amazing">5 stars</label>
				  <input type="radio" id="4-star" name="rating" value="4"><label for="4-star" title="Good">4 stars</label>
				  <input type="radio" id="3-star" name="rating" value="3"><label for="3-star" title="Average">3 stars</label>
				  <input type="radio" id="2-star" name="rating" value="2"><label for="2-star" title="Not Good">2 stars</label>
				  <input type="radio" id="1-star" name="rating" value="1"><label for="1-star" title="Bad">1 star</label>
			  </ul>
			  </section>
			<textarea class="form-control" name= "comment" id="InputDescription" placeholder="Add some Comment"style="
    margin:  10px 20px;
    height: 100px;
"></textarea>
		</div>
		
		<div style="text-align: center;">
			<button type="submit" class="btn btn-lg btn-primary" style="margin: 20px auto;border-radius: 24px;width: 60%;">Submit</button>
		</div>
	</form>
</div>

